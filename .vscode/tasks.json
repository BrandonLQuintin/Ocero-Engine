{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build OceroEngine (Debug)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -e; cmake -S . -B build/Debug -DCMAKE_BUILD_TYPE=Debug && cmake --build build/Debug -j"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build OceroEngine (Release)",
      "type": "shell",
      "command": "bash",
      "args": [
        "-lc",
        "set -e; cmake -S . -B build/Release -DCMAKE_BUILD_TYPE=Release && cmake --build build/Release -j"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
